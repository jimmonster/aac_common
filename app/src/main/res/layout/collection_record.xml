<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/iv_qinzi_main_bg"
              android:orientation="vertical">

    <com.owen.tab.TvTabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_gravity="center_vertical"

        android:background="@drawable/iv_watch_hand"
        app:tabBackground="@drawable/selector_collection_indicator"
        app:tabGravity="center"
        app:tabIndicatorGravity="bottom"
        app:tabIndicatorHeight="0dp"
        app:tabIndicatorResId="@color/color_yellow"
        app:tabIndicatorWidth="180dp"
        app:tabPadding="8dp"
        app:tabRippleColor="@android:color/transparent"
        app:tabScrollMode="fixed"
        app:tabTexSize="38sp"
        app:tabTextColor="@color/color_selector_white2orange"
        app:tabTextSelectedScale="1.2"/>



    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</LinearLayout>