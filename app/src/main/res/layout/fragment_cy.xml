<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginEnd="90dp"
              android:layout_marginStart="20dp"
              android:orientation="vertical">

    <TextView
        android:id="@+id/tv_page_count"
        android:layout_width="150dp"
        android:layout_height="76dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="end"
        android:layout_marginBottom="14dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/iv_drawing_page"
        android:gravity="center"
        android:text="1/3é¡µ"
        android:textColor="@color/color_f66301"
        android:textSize="28sp"
        android:textStyle="bold"/>

    <com.owen.tvrecyclerview.widget.TvRecyclerView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/recyclerView_right"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        app:tv_horizontalSpacingWithMargins="20dp"
        app:tv_layoutManager="GridLayoutManager"
        app:tv_numColumns="4"
        app:tv_numRows="3"
        app:tv_selectedItemIsCentered="true"
        app:tv_verticalSpacingWithMargins="45dp"
        tools:ignore="RtlSymmetry"/>


</LinearLayout>
