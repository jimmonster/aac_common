<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <com.owen.tvrecyclerview.widget.TvRecyclerView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/recyclerView_right"
        android:layout_width="match_parent"
        android:layout_height="804dp"
        android:layout_marginStart="21dp"
        android:layout_marginEnd="60dp"
        android:orientation="vertical"
        app:tv_horizontalSpacingWithMargins="18dp"
        app:tv_layoutManager="GridLayoutManager"
        app:tv_numColumns="3"
        app:tv_numRows="3"
        app:tv_selectedItemIsCentered="true"
        app:tv_verticalSpacingWithMargins="27dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp">

        <TextView
            android:id="@+id/tv_page_count"
            android:layout_width="188dp"
            android:layout_height="99dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="36dp"
            android:background="@drawable/iv_drawing_page"
            android:gravity="center"
            android:text="1/3é¡µ"
            android:textColor="@color/color_f66301"
            android:textSize="36sp"
            android:textStyle="bold"/>


        <ImageView
            android:id="@+id/iv_page_next"
            android:layout_width="180dp"
            android:layout_height="72dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="60dp"
            android:layout_marginBottom="64dp"
            android:background="@drawable/selector_page_next"
            android:clickable="true"
            android:focusable="true"
            android:scaleType="center"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv_page_up"
            android:layout_width="180dp"
            android:layout_height="72dp"
            android:layout_alignTop="@id/iv_page_next"
            android:layout_marginEnd="45dp"
            android:layout_marginBottom="64dp"
            android:layout_toStartOf="@id/iv_page_next"
            android:background="@drawable/selector_page_up"
            android:clickable="true"
            android:focusable="true"
            android:scaleType="center"
            android:visibility="gone"/>


    </RelativeLayout>


</LinearLayout>
