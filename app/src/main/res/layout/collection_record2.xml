<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/iv_qinzi_main_bg"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/iv_watch_hand"
        android:layout_height="wrap_content">

        <com.owen.tvrecyclerview.widget.TvRecyclerView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/recyclerview_tabs"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:scrollbars="none"
            app:spanCount="1"
            app:tv_horizontalSpacingWithMargins="50dp"
            app:tv_isMenu="true"
            app:tv_layoutManager="ListLayoutManager"
            app:tv_verticalSpacingWithMargins="0dp"/>

    </RelativeLayout>


    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</LinearLayout>