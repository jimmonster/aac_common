<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/bg_send_blue">

    <RelativeLayout
        android:layout_width="800dp"
        android:layout_height="400dp"
        android:layout_gravity="center"
        android:background="@drawable/iv_watch_tc"
        >

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:gravity="center"
            android:text="您确认取消这一条收藏吗？"
            android:textColor="@color/white"
            android:textSize="48sp"
            android:textStyle="bold"/>


        <Button
            android:id="@+id/btn_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_message"
            android:layout_marginStart="80dp"
            android:layout_marginTop="70dp"
            android:background="@drawable/selector_dialog_keycode"
            android:focusable="true"
            android:text="确认"
            android:textColor="@color/color_selector_white2black"
            android:textSize="42sp"
            android:textStyle="bold"/>


        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_message"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="80dp"
            android:layout_alignRight="@id/tv_message"
            android:background="@drawable/selector_dialog_keycode"
            android:focusable="true"
            android:text="取消"
            android:textColor="@color/color_selector_white2black"
            android:textSize="42sp"
            android:textStyle="bold"/>


    </RelativeLayout>


</FrameLayout>