<?xml version="1.0" encoding="utf-8"?>
<com.jinhong.jhtv.ui.views.LinearMainLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/iv_category_bg"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:background="@drawable/iv_category_border">

        <com.jinhong.jhtv.ui.leanback.RecyclerViewTV
            android:id="@+id/recyclerView_left"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="135dp">

        </com.jinhong.jhtv.ui.leanback.RecyclerViewTV>


    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="135dp">

            <TextView
                android:id="@+id/tv_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="75dp"
                android:text="1/3"
                android:textColor="@color/white"
                android:textSize="30dp"/>

        </RelativeLayout>


        <FrameLayout
            android:id="@+id/fl_replace_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </FrameLayout>


    </LinearLayout>


</com.jinhong.jhtv.ui.views.LinearMainLayout>