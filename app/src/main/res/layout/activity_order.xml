<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/iv_order_bg"
    android:clipChildren="false"
    android:clipToPadding="false">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/textView3"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_buy_every_month"
            android:layout_width="285dp"
            android:layout_height="110dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/selector_order_button"
            android:focusable="true"
            android:gravity="center"
            android:text="订购包月"
            android:textColor="@color/color_selector_white2orange"
            android:textSize="48sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/tv_buy_one_month"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/selector_order_button"
            android:focusable="true"
            android:gravity="center"
            android:text="订购30天"
            android:textColor="@color/color_selector_white2orange"
            android:textSize="48sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/tv_back"
            android:layout_width="285dp"
            android:layout_height="110dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/selector_order_button"
            android:focusable="true"
            android:gravity="center"
            android:text="返回"
            android:textColor="@color/color_selector_white2orange"
            android:textSize="48sp"
            android:textStyle="bold"
            />

    </LinearLayout>


    <TextView

        android:id="@+id/textView3"
        android:layout_width="180dp"
        android:layout_height="90dp"
        android:layout_above="@id/textView2"
        android:layout_marginStart="75dp"
        android:layout_marginBottom="35dp"
        android:gravity="center"
        android:text="订购包月"
        android:textColor="@color/white"
        android:textSize="32sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="180dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="75dp"
        android:layout_marginBottom="25dp"
        android:gravity="center"
        android:text="订购30天"
        android:textColor="@color/white"
        android:textSize="32sp"
        android:textStyle="bold"

        />

    <TextView

        android:id="@+id/textView5"
        android:layout_width="1000dp"
        android:layout_height="90dp"
        android:layout_above="@id/textView4"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:layout_toEndOf="@id/textView2"
        android:text="@string/app_order_info1"
        android:textColor="@color/white"

        android:textSize="32sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="1000dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_toEndOf="@id/textView3"
        android:text="@string/app_order_info2"
        android:textColor="@color/white"
        android:textSize="32sp"
        android:textStyle="bold"/>


</RelativeLayout>