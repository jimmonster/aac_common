<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/bg"
              android:orientation="vertical">

    <com.owen.tvrecyclerview.widget.TvRecyclerView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/recyclerview_tabs"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:scrollbars="none"
        app:spanCount="1"
        app:tv_isMenu="true"
        app:tv_layoutManager="ListLayoutManager"/>


    <com.owen.tvrecyclerview.widget.TvRecyclerView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/recyclerView_info"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="25dp"
        android:orientation="vertical"
        app:tv_horizontalSpacingWithMargins="7dp"
        app:tv_layoutManager="GridLayoutManager"
        app:tv_numColumns="10"
        app:tv_numRows="2"
        app:tv_selectedItemIsCentered="true"
        app:tv_verticalSpacingWithMargins="9dp">

    </com.owen.tvrecyclerview.widget.TvRecyclerView>

</LinearLayout>