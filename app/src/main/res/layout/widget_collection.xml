<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="@drawable/iv_watch_jl"
    android:focusable="false"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="730dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:paddingStart="90dp"
        android:text="内容名称"
        android:textColor="@color/white"
        android:textSize="36sp"
        />

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="110dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginEnd="380dp"
        android:gravity="center_vertical"
        android:text="类型"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="36sp"
        />

    <TextView
        android:id="@+id/tv_play"
        android:layout_width="140dp"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/selector_collection_item"
        android:focusable="true"
        android:gravity="center_vertical"
        android:text="播放"
        android:textAlignment="center"
        android:textColor="@color/color_selector_white2black"
        android:textSize="36sp"
        />

    <TextView
        android:id="@+id/tv_isCollection"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/selector_collection_item"
        android:focusable="true"
        android:gravity="center_vertical"
        android:text="取消收藏"
        android:textAlignment="center"
        android:textColor="@color/color_selector_white2black"
        android:textSize="36sp"
        />

</LinearLayout>