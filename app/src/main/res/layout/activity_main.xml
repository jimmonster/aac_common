<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:orientation="vertical"
    tools:context=".ui.activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"

            android:gravity="right|center_vertical">
            <!--时间，滚动文字-->
            <com.jinhong.jhtv.ui.views.AutoHorizontalScrollTextView
                android:id="@+id/tv_notice"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:singleLine="true"
                android:text="2019年公告上映了"
                android:textColor="@color/color_ffffff"/>

            <!--时间，滚动文字-->
            <TextClock
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:format12Hour="MM/dd HH:mm"
                android:format24Hour="MM/dd HH:mm"
                android:textColor="@color/color_ffffff"/>


        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/RecyclerView_tabs"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="3"
            android:orientation="horizontal">


        </android.support.v7.widget.RecyclerView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="14dp"
        android:layout_weight="5">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/VerticalGridView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

        </android.support.v7.widget.RecyclerView>


    </LinearLayout>


</LinearLayout>