<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:descendantFocusability="beforeDescendants"
    android:focusable="false"
    android:orientation="vertical"
    android:paddingStart="100dp"
    android:paddingTop="15dp"
    android:paddingEnd="100dp"
    tools:context=".ui.activity.MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/tv_log"
            android:layout_width="243dp"
            android:layout_height="120dp"
            android:src="@drawable/logo3"/>

        <ImageView

            android:layout_width="42dp"
            android:layout_height="45dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="45dp"
            android:layout_toStartOf="@id/tv_notice"
            android:background="@drawable/sound"
            android:scaleType="fitXY"/>


        <!--滚动文字-->
        <com.jinhong.jhtv.ui.views.AutoHorizontalScrollTextView
            android:id="@+id/tv_notice"
            android:layout_width="624dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="100dp"
            android:layout_toLeftOf="@id/tv_date"
            android:singleLine="true"
            android:text="2019年公告上映了萨达萨发生大事发生发生发生发撒上,2019年公告上映了萨达萨发生大事发生发生发生发撒上"
            android:textColor="@color/color_text"
            android:textSize="27sp"/>


        <!--时间-->
        <TextClock
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="60dp"
            android:focusable="false"
            android:format12Hour="MM/dd HH:mm"
            android:format24Hour="MM/dd HH:mm"
            android:textColor="@color/color_text"
            android:textSize="27sp"/>


        <LinearLayout
            android:id="@+id/ll_container2"
            android:layout_width="match_parent"
            android:layout_height="182dp"
            android:layout_below="@id/tv_log"
            android:layout_marginBottom="27dp"
            android:gravity="center_vertical"

            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_tab0"
                android:layout_width="243dp"
                android:layout_height="121dp"
                android:focusable="true"
                android:src="@drawable/selector_titles0"/>

            <ImageView
                android:id="@+id/iv_tab1"
                android:layout_width="243dp"
                android:layout_height="121dp"
                android:layout_marginStart="52dp"
                android:focusable="true"
                android:src="@drawable/selector_titles1"/>

            <ImageView
                android:id="@+id/iv_tab2"
                android:layout_width="243dp"
                android:layout_height="121dp"
                android:layout_marginStart="52dp"
                android:focusable="true"
                android:src="@drawable/selector_titles2"/>

            <ImageView
                android:id="@+id/iv_tab3"
                android:layout_width="243dp"
                android:layout_height="121dp"
                android:layout_marginStart="52dp"
                android:focusable="true"
                android:src="@drawable/selector_titles3"/>

            <ImageView
                android:id="@+id/iv_tab4"
                android:layout_width="243dp"
                android:layout_height="121dp"
                android:layout_marginStart="52dp"
                android:focusable="true"
                android:src="@drawable/selector_titles4"/>


            <ImageView
                android:id="@+id/iv_tab5"
                android:layout_width="243dp"
                android:layout_height="121dp"
                android:layout_marginStart="52dp"
                android:focusable="true"
                android:src="@drawable/selector_titles5"/>


        </LinearLayout>


    </RelativeLayout>


    <LinearLayout
        android:id="@+id/ll_container1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="382dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_pic0"
                    android:layout_width="match_parent"
                    android:layout_height="231dp"
                    android:layout_marginBottom="30dp"
                    android:focusable="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/sy01"/>

                <ImageView
                    android:id="@+id/iv_pic1"
                    android:layout_width="match_parent"
                    android:layout_height="231dp"
                    android:layout_marginBottom="30dp"
                    android:focusable="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/sy02"/>

                <ImageView
                    android:id="@+id/iv_pic2"
                    android:layout_width="match_parent"
                    android:layout_height="231dp"
                    android:focusable="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/sy03"/>


            </LinearLayout>

            <LinearLayout

                android:layout_width="363dp"
                android:layout_height="match_parent"
                android:layout_marginStart="30dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_pic3"
                    android:layout_width="match_parent"
                    android:layout_height="483dp"
                    android:layout_marginBottom="30dp"
                    android:focusable="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/sy04"/>

                <ImageView
                    android:id="@+id/iv_pic4"
                    android:layout_width="match_parent"
                    android:layout_height="242dp"
                    android:focusable="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/sy06"/>


            </LinearLayout>

            <LinearLayout

                android:layout_width="363dp"
                android:layout_height="match_parent"
                android:layout_marginStart="30dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_pic5"
                    android:layout_width="match_parent"
                    android:layout_height="483dp"
                    android:layout_marginBottom="30dp"
                    android:focusable="true"
                    android:scaleType="fitXY"

                    android:src="@drawable/sy05"/>

                <ImageView
                    android:id="@+id/iv_pic6"
                    android:layout_width="match_parent"
                    android:layout_height="242dp"
                    android:focusable="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/sy10"/>


            </LinearLayout>


            <LinearLayout

                android:layout_width="390dp"
                android:layout_height="match_parent"
                android:layout_marginStart="30dp"
                android:focusable="false"
                android:orientation="vertical"
                >

                <ImageView
                    android:id="@+id/iv_pic7"
                    android:layout_width="match_parent"
                    android:layout_height="231dp"
                    android:layout_marginBottom="30dp"

                    android:focusable="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/sy07"/>

                <ImageView
                    android:id="@+id/iv_pic8"
                    android:layout_width="match_parent"
                    android:layout_height="231dp"
                    android:layout_marginBottom="30dp"

                    android:focusable="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/sy08"/>

                <ImageView
                    android:id="@+id/iv_pic9"
                    android:layout_width="match_parent"
                    android:layout_height="231dp"
                    android:layout_marginBottom="30dp"
                    android:focusable="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/sy09"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>