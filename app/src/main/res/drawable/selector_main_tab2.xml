<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 默认时的背景图片
    <item android:drawable="@drawable/pic1"/>
    -->
    <!-- 非触摸模式下获得焦点并单击时的背景图片-->
    <item  android:state_focused="true" android:state_pressed="true" android:state_selected="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@android:color/transparent"/>
                </shape>
            </item>
            <item android:left="13dp" android:right="13dp" android:drawable="@drawable/iv_qinzi_tab_btn03_f">
            </item>
        </layer-list>
    </item>
    <!-- 没有焦点时的背景图片 -->
    <item  android:state_window_focused="false">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@android:color/transparent"/>
                </shape>
            </item>
            <item android:left="13dp" android:right="13dp" android:drawable="@drawable/iv_qinzi_tab_btn03">
            </item>
        </layer-list>
    </item>


    <!--获得焦点时的图片背景-->
    <item  android:state_focused="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@android:color/transparent"/>
                </shape>
            </item>
            <item android:left="13dp" android:right="13dp" android:drawable="@drawable/iv_qinzi_tab_btn03_f">
            </item>
        </layer-list>
    </item>
</selector>







