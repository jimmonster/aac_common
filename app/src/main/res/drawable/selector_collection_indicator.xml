<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@android:color/transparent"/>
                </shape>
            </item>
            <item android:drawable="@drawable/iv_watch_co_f" android:left="70dp" android:right="70dp">
            </item>
        </layer-list>
    </item>

    <item android:state_selected="false">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@android:color/transparent"/>
                </shape>
            </item>
            <item android:drawable="@drawable/iv_watch_co" android:left="70dp" android:right="70dp">
            </item>
        </layer-list>
    </item>

</selector>








